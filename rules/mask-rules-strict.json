{
  "version": 1,
  "rules": [
    {
      "id": "email",
      "name": "Email",
      "enabled": true,
      "pattern": "(?i)\\bemail=([A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,})\\b",
      "replacement": "email=[MASKED_EMAIL]",
      "flags": []
    },
    {
      "id": "ip",
      "name": "IP (IPv4)",
      "enabled": true,
      "pattern": "\\b(?:ip|clientIp)=((?:\\d{1,3}\\.){3}\\d{1,3})\\b",
      "replacement": "clientIp=[MASKED_IP]",
      "flags": []
    },
    {
      "id": "token",
      "name": "Token",
      "enabled": true,
      "pattern": "\\btoken=([A-Za-z0-9._-]{8,})\\b",
      "replacement": "token=[MASKED_TOKEN]",
      "flags": []
    },
    {
      "id": "bearer",
      "name": "Authorization Bearer",
      "enabled": true,
      "pattern": "(?i)Authorization=\"?Bearer\\s+([A-Za-z0-9._-]{8,})\"?",
      "replacement": "Authorization=\"Bearer [MASKED_BEARER]\"",
      "flags": []
    },
    {
      "id": "user_id",
      "name": "User ID",
      "enabled": true,
      "pattern": "\\buserId=(\\d{1,12})\\b",
      "replacement": "userId=[MASKED_USER_ID]",
      "flags": []
    },
    {
      "id": "request_id",
      "name": "Request ID (UUID)",
      "enabled": true,
      "pattern": "\\brequestId=([0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12})\\b",
      "replacement": "requestId=[MASKED_REQUEST_ID]",
      "flags": []
    },
    {
      "id": "session_id",
      "name": "Session ID",
      "enabled": true,
      "pattern": "\\bsessionId=([A-Za-z0-9._-]{6,})\\b",
      "replacement": "sessionId=[MASKED_SESSION_ID]",
      "flags": []
    },
    {
      "id": "account_id",
      "name": "Account ID",
      "enabled": true,
      "pattern": "\\baccountId=([A-Za-z0-9._-]{4,})\\b",
      "replacement": "accountId=[MASKED_ACCOUNT_ID]",
      "flags": []
    },
    {
      "id": "tenant_id",
      "name": "Tenant ID",
      "enabled": true,
      "pattern": "\\btenantId=([A-Za-z0-9._-]{2,})\\b",
      "replacement": "tenantId=[MASKED_TENANT_ID]",
      "flags": []
    },
    {
      "id": "db_url",
      "name": "DB URL",
      "enabled": true,
      "pattern": "\\bdbUrl=(jdbc:[^\\s]+)\\b",
      "replacement": "dbUrl=[MASKED_DB_URL]",
      "flags": []
    }
  ]
}
